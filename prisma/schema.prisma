generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crosswalk {
  id        String   @default(cuid()) @id
  userId    String   // email from next auth
  latitude  Float
  longitude Float
  address   String
  votes     Int
  createdAt DateTime @default(now()) 
  updatedAt DateTime @default(now())
  @@index([userId], name: "crosswalks.userId")
}